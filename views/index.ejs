<%- include('layout/header')  %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
          <% if (message) { %>
           <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
            <strong><%= message.message %></strong>
          </div>
          <% } %>
            <div class="table-responsive">
              <% if (products && products.length > 0) { %>
                  <table class="table table-striped text-center my-3">
                    <thead>
                      <tr class="table-dark">
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Product Price</th>
                        <th>Product Image</th>
                        <th>Product Detail</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% products.forEach((row) => { %>
                        <tr>
                          <td><%= row.id %></td>
                          <td><%= row.name %></td>
                          <td><%= row.price %></td>
                          <td><img src="<%= row.image %>" width="50" class="img-thumbnail"></td>
                          <td><%= row.detail %></td>
                          <td>
                            <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                            
                            <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                          </td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                <% } else { %>
                  <h1 class="text-center text-secondary mt-5">You haven't added any product in the Database Yet!</h1>
                <% } %>
            </div>
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="col-lg-3">
            <a href="/add" class="border-shadow btn btn-success btn-lg">
                <span class="text-gradient">New Product <i class="fa-regular fa-plus" style="color: #c2d1c7;"></i></span>
            </a>
        </div>
    </div>
</div>
<%- include('layout/footer')  %>
